{% extends 'base.html.twig' %}

{% block body %}
	{% block javascripts %}
		{{parent()}}
	{% endblock %}
	{% block header %}
		{{parent()}}
	{% endblock %}
	<div class="contenido">
		<form id="nuevoIntentoForm">
			<div id="content"></div>

			<div class="quizNav">
				<p class="media">Navegador</p>
				<div class="buttonsQuiz">
					<button class="buttonQuiz" id="1">1</button>
					<button class="buttonQuiz" id="2">2</button>
					<button class="buttonQuiz" id="3">3</button>
					<button class="buttonQuiz" id="4">4</button>
					<button class="buttonQuiz" id="5">5</button>
					<button class="buttonQuiz" id="6">6</button>
					<button class="buttonQuiz" id="7">7</button>
					<button class="buttonQuiz" id="8">8</button>
					<button class="buttonQuiz" id="9">9</button>
					<button class="buttonQuiz" id="10">10</button>
				</div>
				<br>
				<p class="media" id="contador"></p>
				<button class="finalizar" id="finalizar">Finalizar intento...</button>
			</div>
		</form>

		<div id="overlay"></div>

		<div id="modal">
			<p>¿Estás seguro de terminar el intento?</p>
			<div id="modal-buttons">
				<button class="confirm-button">Sí</button>
				<button class="cancel-button">No</button>
			</div>
		</div>

		<br><br>
	</div>
	{% block footer %}
		{{parent()}}
	{% endblock %}
{% endblock %}
